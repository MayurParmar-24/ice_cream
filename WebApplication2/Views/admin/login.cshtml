@model WebApplication2.Models.login

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/header_footer.cshtml";
}



<!-- Login Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <center> <h1 class="m-0 display-4 text-primary"><span class="text-secondary">Log</span>In</h1></center> <br />
                
            </div>
        </div>
        <h3 class="text-danger"> @ViewBag.error</h3>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="contact-form bg-light rounded p-5">
                    <div id="success"></div>

                    <form asp-action="login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </form>



                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login End -->