@model WebApplication2.Models.contact

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/header_footer.cshtml";
}

<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5 pb-5">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/theme/assets/img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-md-3">Traditional & Delicious</h4>
                        <h1 class="display-3 text-white mb-md-4">Traditional Ice Cream Since 1950</h1>
                        <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/theme/assets/img/carousel-2.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-md-3">Traditional & Delicious</h4>
                        <h1 class="display-3 text-white mb-md-4">Made From Our Own Organic Milk</h1>
                        <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
            <div class="btn btn-secondary px-0" style="width: 45px; height: 45px;">
                <span class="carousel-control-prev-icon mb-n1"></span>
            </div>
        </a>
        <a class="carousel-control-next" href="#header-carousel" data-slide="next">
            <div class="btn btn-secondary px-0" style="width: 45px; height: 45px;">
                <span class="carousel-control-next-icon mb-n1"></span>
            </div>
        </a>
    </div>
</div>
<!-- Carousel End -->

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <center> <h1 class="m-0 display-4 text-primary"><span class="text-secondary">CONTACT </span>US</h1></center> <br />
                
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="contact-form bg-light rounded p-5" >
                    <div id="success"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form asp-action="Contact">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" required="required" data-validation-required-message="Please enter your name" />
                                    <p class="help-block text-danger"></p>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" data-validation-required-message="Please enter your email" />
                                    <p class="help-block text-danger"></p>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Message" class="control-label"></label>
                                    <textarea asp-for="Message" class="form-control" required="required" data-validation-required-message="Please enter your message"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Send Message" class="btn btn-primary" />
                                </div>
                            </form>

                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <center>
                                <h1 style="font-family: 'Times New Roman', Times, serif;">PHONE</h1>
                                <p>Contact:<span style="color: rgb(158, 30, 30);"> 0346-2300766 , 0314-2994165 </span></p>
                            </center>
                            <hr>

                            <center>
                                <h1 style="font-family: 'Times New Roman', Times, serif;">ADDRESS</h1>
                                <p>
                                    iCream ,Nishter Road Garden East Soldier Bazaar, Karachi <br>

                                    <span style="color: rgb(158, 30, 30);"> Opening Hours <br></span>
                                    <p class="mb-2">Mon – Sat, 2PM – 3AM</p>
                                   <p class="mb-0">Sunday 12PM - 12AM</p>
                                    </p>
                            </center>

                            <!---Later------>
                        </div>

                    </div>
                  


                 
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->