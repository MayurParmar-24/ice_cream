    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="m-0 display-4 text-primary"><span class="text-secondary">OUR</span> STAFF</h1> <br />
                <h1 class="section-title position-relative mb-5">Experienced & Most Famous Ice Cream Chefs</h1>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0 pb-5 pb-lg-0"></div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-carousel team-carousel">
                    <div class="team-item">
                        <div class="team-img mx-auto">
                            <img class="rounded-circle w-100 h-100" src="~/theme/assets/img/jazib.jpg " style="width:50% ; height 300px">
                        </div>
                        <div class="position-relative text-center bg-light rounded px-4 py-5" style="margin-top: -100px;">
                            <h3 class="font-weight-bold mt-5 mb-3 pt-5">Jazib Shaikh</h3>
                            <h6 class="text-uppercase text-muted mb-4">Head Chef</h6>

                        </div>
                    </div>
                    <div class="team-item">
                        <div class="team-img mx-auto">
                            <img class="rounded-circle w-100 h-100" src="~/theme/assets/img/team-1.jpg" style="object-fit: cover;">
                        </div>
                        <div class="position-relative text-center bg-light rounded px-4 py-5" style="margin-top: -100px;">
                            <h3 class="font-weight-bold mt-5 mb-3 pt-5">Hammas Magsi</h3>
                            <h6 class="text-uppercase text-muted mb-4">Chef</h6>

                        </div>
                    </div>

                    <div class="team-item">
                        <div class="team-img mx-auto">
                            <img class="rounded-circle w-100 h-100" src="~/theme/assets/img/samyan.jpg" style="object-fit: cover;">
                        </div>
                        <div class="position-relative text-center bg-light rounded px-4 py-5" style="margin-top: -100px;">
                            <h3 class="font-weight-bold mt-5 mb-3 pt-5">Samyan</h3>
                            <h6 class="text-uppercase text-muted mb-4">Chef</h6>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
